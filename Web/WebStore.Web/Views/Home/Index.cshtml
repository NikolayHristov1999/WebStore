@using WebStore.Common
@model WebStore.Web.ViewModels.Home.HomeIndexPageProductsViewModel
@{
    this.ViewData["Title"] = "Sell and purchase product online";
}

<div>
    @if (this.TempData.ContainsKey("Message"))
    {

        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @this.TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="container-fluid p-0">
        <div class="text-center">
            <h1 class="display-4 fs-1 ">Welcome to @GlobalConstants.SystemName!</h1>
        </div>
        <div id="carouselHomePage" class="carousel carousel-dark slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.instrade.bg/wp-content/uploads/2018/07/summer-sale-2017_landing_page_2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.instrade.bg/wp-content/uploads/2018/07/summer-sale-2017_landing_page_2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.instrade.bg/wp-content/uploads/2018/07/summer-sale-2017_landing_page_2.png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselHomePage" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselHomePage" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="row g-2">
            <h3>Top Products</h3>
            <div class="mb-5">
                <div class="col">
                    <div class="row g-2">
                        @foreach (var product in Model.TopProducts)
                        {
                            <div class="col-md-3">
                                <div class="product py-4">
                                    <!---<span class="off bg-success">-25% OFF</span> -->
                                    <div class="text-center min-img-height-products-list">
                                        <a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id">
                                            <img src="@product.ImageUrl" width="240" class="img-fluid img-in-item-contrainer">
                                        </a>
                                    </div>
                                    <div class="about text-center">
                                        <div class="container caption">
                                            <h5 class="text-break">@product.Name</h5>
                                        </div><span class="h5">$@product.Price</span>
                                    </div>
                                    <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center">
                                        <span class="product_fav"><i class="fas fa-heart"></i></span>
                                        <button class="btn btn-primary text-uppercase" onclick="addToCart(@product.Id, 1)">Add to cart</button>
                                        <div class="add">
                                            <span class="product_fav"><i class="fab fa-opencart"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <h3>New Products</h3>
            <div class="mb-5">
                <div class="col">
                    <div class="row g-2">
                        @foreach (var product in Model.NewProducts)
                        {
                            <div class="col-md-3">
                                <div class="product py-4">
                                    <!---<span class="off bg-success">-25% OFF</span> -->
                                    <div class="text-center min-img-height-products-list">
                                        <a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id">
                                            <img src="@product.ImageUrl" width="240" class="img-fluid img-in-item-contrainer">
                                        </a>
                                    </div>
                                    <div class="about text-center">
                                        <div class="container caption">
                                            <h5 class="text-break">@product.Name</h5>
                                        </div><span class="h5">$@product.Price</span>
                                    </div>
                                    <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center">
                                        <span class="product_fav"><i class="fas fa-heart"></i></span>
                                        <button class="btn btn-primary text-uppercase" onclick="addToCart(@product.Id, 1)">Add to cart</button>
                                        <div class="add">
                                            <span class="product_fav"><i class="fab fa-opencart"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
