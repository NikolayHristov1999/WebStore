@model WebStore.Web.ViewModels.Administration.Orders.OrderViewModel 
@{
    this.ViewData["Title"] = "Order - " + this.Model.Id;
}
<div class="container-fluid px-4">
    <div class="row">
        <div class="card col-md-5 me-4 mb-2">
            <div class="card-header">
                Details for Order
            </div>
            <div class="card-body">
                <p class="card-text"><i class="fas fa-credit-card"></i> - @Model.PaymentMethod</p>
                <hr />
                <p class="card-text"><i class="fas fa-shipping-fast"></i> - @Model.ShippingMethod</p>
                <hr />
                <p class="card-text"><i class="fas fa-calendar-alt"></i> - @Model.CreatedOn</p>
            </div>
        </div>
        <div class="card col-md-5 mb-2">
            <div class="card-header">
                Details for Client
            </div>
            <div class="card-body">
                <p class="card-text"><i class="fas fa-user"></i> - @Model.ContactInfo.ClientName</p>
                <hr />
                <p class="card-text"><i class="fas fa-envelope"></i> - @Model.ContactInfo.Email</p>
                <hr />
                <p class="card-text"><i class="fas fa-globe"></i> - @Model.ContactInfo.Country</p>
                <hr />
                <p class="card-text"><i class="fas fa-street-view"></i> - @Model.ContactInfo.ShippingStreet @Model.ContactInfo.Address</p>

            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">

            <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Total Price - $@Model.TotalPrice</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.TotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
