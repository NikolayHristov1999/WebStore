@using WebStore.Web.ViewModels.Administration.Categories
@model IEnumerable<CategoryInTableViewModel>

@{
    ViewData["Title"] = "Categories";
}


<div class="container-fluid px-4 mt-4" id="fileManager">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end col-auto mt-2">
        <a asp-action="Create" class="btn btn-success mb-2 text-end">Add New Category</a>
    </div>
    <div class="row">
        <table id="categoriesDataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Parent Category</th>
                    <th>Products Count</th>
                    <th>Created On</th>
                    <th>Deleted</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Parent Category</th>
                    <th>Products Count</th>
                    <th>Created On</th>
                    <th>Deleted</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="text-break text-wrap">
                            @category.Name
                        </td>
                        <td class="text-break text-wrap">@category.ParentCategoryName</td>
                        <td class="text-break text-wrap">@category.ProductsCount</td>
                        <td class="text-break text-wrap">@Html.DisplayFor(modelItem => category.CreatedOn)</td>
                        <td class="text-break text-wrap">@Html.DisplayFor(modelItem => category.IsDeleted)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#categoriesDataTable').dataTable({
                "order": [[3, "desc"]],
                "columnDefs": [{ "targets": 3, "type": "date-eu" }]
            });
        });
    </script>

}
