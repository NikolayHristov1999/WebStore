@model IEnumerable<WebStore.Web.ViewModels.Administration.Orders.TableOrderViewModel>

<table id="ordersDataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Email</th>
            <th>Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Price - $</th>
            <th>Email</th>
            <th>Date</th>
            <th>Details</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Name</td>
                <td>$@order.Price</td>
                <td>@order.Email</td>
                <td>@order.CreatedOn.ToString("dd/MM/yyyy hh:mm:ss tt")</td>
                <td>
                    <a asp-area="Administration" asp-controller="Orders"
                       asp-action="ById" asp-route-id="@order.SellerOrderId" class="btn btn-primary">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>