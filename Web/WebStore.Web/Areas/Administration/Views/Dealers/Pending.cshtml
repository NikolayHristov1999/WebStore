@using WebStore.Web.ViewModels.Administration.Dealers
@model IEnumerable<PendingDealerViewModel>

@{
    ViewData["Title"] = "Pending Dealers";
}


<div class="container-fluid px-4 mt-4" id="fileManager">
    <div class="row">
        <table id="dealersDataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var dealer in Model)
                {
                <tr>
                    <td class="text-break text-wrap">
                        @dealer.Name
                    </td>
                    <td class="text-break text-wrap">@dealer.Email</td>
                    <td class="text-break text-wrap">@dealer.Status</td>
                    <td class="text-break text-wrap">@Html.DisplayFor(modelItem => dealer.CreatedOn)</td>
                    <td class="text-center">
                        <a href="" class="btn btn-primary">
                            Select
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dealersDataTable').dataTable({
            });
        });
    </script>

}
